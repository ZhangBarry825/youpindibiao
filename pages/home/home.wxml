<!--pages/home/home.wxml-->
<view class="page">
    <view class="address" wx:if="{{addressDetail.recommend!=''}}">
        <image src="../../static/images/location.png"></image>
        <view class="text">{{addressDetail.recommend}}</view>
    </view>
    <view class="search-box">
        <van-search
                class="searchInput"
                value="{{ searchKeyword }}"
                bind:search="onSearchChange"
                bind:cancel="onSearchCancel"
                shape="round"
                background="none"
                placeholder="请输入搜索关键词"
        />
    </view>
    <swiper indicator-color="#ffffff" indicator-active-color="#F16500" indicator-dots="{{true}}" class="swiper-box"
            autoplay="{{true}}" interval="{{3000}}" duration="{{1000}}">
        <swiper-item wx:for="{{bannerList}}" wx:key="item">
            <image src="{{item.imageUrl}}" class="slide-image" width="100%" height="200"/>
        </swiper-item>
    </swiper>


    <view class="menu-box">
        <view class="top">
            <view class="left">
                <van-tabs color="#F16500" active="{{ tagsActive }}" bind:change="onTagsChange" border="{{false}}">
                    <van-tab title="{{item.goodsname}}" wx:for="{{categoryList}}" wx:key="item"></van-tab>
<!--                    <van-tab title="国酒茅台"></van-tab>-->
<!--                    <van-tab title="美容护肤"></van-tab>-->
<!--                    <van-tab title="梦洁家纺"></van-tab>-->
                </van-tabs>
            </view>
            <view class="right" bind:tap="toggleShow">
                <image wx:if="{{!showMenus}}" mode="aspectFit" src="../../static/images/top.png"></image>
                <image wx:if="{{showMenus}}" mode="aspectFit" src="../../static/images/down.png"></image>
            </view>
        </view>
        <view class="items {{showMenus?'':'heightController'}}">
            <view class="item" wx:if="{{idx<12}}" wx:for-index="idx" wx:for="{{categoryList}}" wx:key="item">{{item.goodsname}}</view>
        </view>
    </view>
    <view class="shopping">
        <view class="title">
            <view class="left">
                <image src="../../static/images/clock.png"></image>
                限时抢购
            </view>
            <view class="right" bind:tap="goTo" data-path="/pages/panic-buying/panic-buying">查看更多+</view>
        </view>
        <van-tabs color="#F16500" active="{{ timeTagsActive }}" bind:change="onTimeTagsChange">
            <van-tab title="10:00"></van-tab>
            <van-tab title="16:00"></van-tab>
            <van-tab title="20:00"></van-tab>
        </van-tabs>
        <view class="time">
            <text wx:if="{{scrapStart}}">正在进行中，离结束还有</text>
            <text wx:if="{{!scrapStart}}">未开始，离开始还有</text>
            <view class="red">
                <van-count-down bind:finish="onTimeOut" use-slot time="{{ leftTime }}" bind:change="onTimeChange">
                    <text class="timeItem">{{timeData.days*24+timeData.hours }} : {{ timeData.minutes }} : {{ timeData.seconds }}</text>
                </van-count-down>
            </view>
        </view>

        <view class="goods">
            <view class="good" wx:for="{{grabList}}" wx:key="item">
                <view class="left">
                    <image mode="aspectFill" src="{{item.thumbnail}}" bind:tap="goTo" data-id="{{item.id}}" data-path="/pages/goods-detail/goods-detail"></image>
                </view>
                <view class="right">
                    <view class="title" bind:tap="goTo" data-id="{{item.id}}" data-path="/pages/goods-detail/goods-detail">
                        {{item.name}}
                    </view>
                    <view class="detail">
                        <view class="price">
                            <view class="line1">
                                抢购价：
                                <view class="color">￥{{item.money}}</view>
                            </view>
                            <view class="line2">
                                原价：
                                <view class="color">￥{{item.marketMoney}}</view>
                            </view>
                        </view>
                        <view class="button {{scrapStart?'':'disabled'}}">立即抢购</view>
                    </view>
                </view>
            </view>
        </view>
    </view>
    <view class="shops" wx:if="{{nearbyShopList.length>0}}">
        <view class="title">
            <view class="left">
                <image src="../../static/images/shop.png"></image>
                附近商家
            </view>
            <view class="right">查看更多+</view>
        </view>
        <view class="items">
            <view class="item" wx:for="{{nearbyShopList}}" wx:key="item">
                <view class="left">
                    <image mode="aspectFill" src="{{item.nearby_img}}"></image>
                </view>
                <view class="right">
                    <view class="line1">
                        <view class="title">{{item.nearby_name}}</view>
                        <view class="location">
                            <image mode="aspectFit" src="../../static/images/arround.png"></image>
                            {{item.distance}}km
                        </view>
                    </view>
                    <view class="line2">
                        营业时间：{{item.start_time}}~{{item.end_time}}
                    </view>
                    <view class="line3">
                        <view class="count">人均：26 月售{{item.shopsales}}单</view>
                        <view class="score">
<!--                            <image src="../../static/images/star.png" wx:for="{{item.shopstar/1}}"></image>-->
<!--                            <image src="../../static/images/star-half.png"></image>-->
<!--                            <image src="../../static/images/star-none.png" ></image>-->
                            <van-rate
                                    allow-half
                                    readonly
                                    value="{{item.shopstar}}"
                                    :size="23"
                                    color="#ffd21e"
                                    void-icon="star"
                                    void-color="#eee"
                            />
                           <text style="margin-left: 10rpx">{{item.shopstar}}</text>
                        </view>
                    </view>
                </view>
            </view>
        </view>
    </view>
    <view class="banners">
        <view class="banner">
            <image mode="aspectFill" src="{{advertisementList[0].imageUrl}}"></image>
        </view>
        <view class="banner">
            <image mode="aspectFill" src="{{advertisementList[1].imageUrl}}"></image>
        </view>
        <view class="banner">
            <image mode="aspectFill" src="{{advertisementList[2].imageUrl}}"></image>
        </view>
    </view>
    <view class="hot-goods">
        <view class="title">
            <view class="left">
                <image src="../../static/images/goods.png"></image>
                热门商品
            </view>
            <view class="right" bind:tap="goTo" data-type="hotGoods">查看更多+</view>
        </view>
        <view class="good-items">
            <view class="good-item" wx:for="{{hotGoodsList}}" wx:key="item">
                <view class="good-pic">
                    <image mode="aspectFill" src="{{item.thumbnail}}" bind:tap="goTo" data-path="/pages/goods-detail/goods-detail" data-id="{{item.id}}"></image>
                </view>
                <view class="title" bind:tap="goTo" data-path="/pages/goods-detail/goods-detail" data-id="{{item.id}}">{{item.name}}</view>
                <view class="detail">
                    <view class="price">
                        <view class="text1">￥{{item.money}}</view>
                        <view class="text2">￥{{item.marketMoney}}</view>
                    </view>
                    <view class="trolley">
                        <image mode="aspectFill" src="../../static/images/goods-trolley.png"></image>
                    </view>
                </view>
            </view>
        </view>
    </view>
    <view class="banners">
        <view class="banner">
            <image mode="aspectFill" src="{{advertisementList[3].imageUrl}}"></image>
        </view>
    </view>
    <view class="new-goods">
        <view class="title">
            <view class="left">
                <image src="../../static/images/goods-up.png"></image>
                最新上架
            </view>
            <view class="right" bind:tap="goTo" data-type="newGoods">查看更多+</view>
        </view>
        <view class="good-items">
            <view class="good-item" wx:for="{{newGoodsList}}" wx:key="item">
                <view class="good-pic">
                    <image mode="aspectFill" src="{{item.thumbnail}}"  bind:tap="goTo" data-path="/pages/goods-detail/goods-detail" data-id="{{item.id}}"></image>
                </view>
                <view class="title"  bind:tap="goTo" data-path="/pages/goods-detail/goods-detail" data-id="{{item.id}}">{{item.name}}</view>
                <view class="detail">
                    <view class="price">
                        <view class="text1">￥{{item.money}}</view>
                        <view class="text2">￥{{item.marketMoney}}</view>
                    </view>
                    <view class="trolley">
                        <image mode="aspectFill" src="../../static/images/goods-trolley.png"></image>
                    </view>
                </view>
            </view>
        </view>
    </view>


    <van-overlay show="{{ showRedPackage }}" bind:click="hideRedPackage">
        <view class="wrapper">
            <image mode="aspectFit" src="../../static/images/red-package.png"></image>
            <view class="tip1">欢迎加入优品地标</view>
            <view class="tip2" catch:tap="catchRedPackage">立即\n查看</view>
            <view class="tip3">红包已发放到您的钱包！\n请在七日有效期内使用
            </view>
            <view class="count">￥10</view>
        </view>
    </van-overlay>

    <van-dialog id="van-dialog"/>
</view>







