.page {
  height: 100%;
  width: 100%;
  position: absolute;
  background-color: #f4f4f4;
}
.page .table {
  width: 100%;
  display: flex;
  flex-direction: column;
  background-color: #ffffff;
  padding: 30rpx 20rpx;
  box-sizing: border-box;
}
.page .table .line {
  width: 100%;
  display: flex;
  font-size: 28rpx;
  font-weight: 400;
  margin: 10rpx 0;
}
.page .table .line .title {
  color: #333333;
}
.page .table .line .value {
  color: #999999;
}
.page .step {
  width: 100%;
  display: flex;
  justify-content: center;
  padding-top: 50rpx;
}
.page .step .item1 {
  width: 150rpx;
  display: flex;
  flex-direction: column;
}
.page .step .item1 .line1 {
  width: 100%;
  height: 76rpx;
  display: flex;
  justify-content: center;
}
.page .step .item1 .line1 image {
  width: 76rpx;
  height: 76rpx;
}
.page .step .item1 .line2 {
  width: 100%;
