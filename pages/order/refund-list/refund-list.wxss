.page {
  height: 100%;
  width: 100%;
  position: absolute;
  background-color: #f4f4f4;
}
.page .shop-list {
  margin-top: 10rpx;
  width: 100%;
  display: flex;
  flex-direction: column;
}
.page .shop-list .shop-title {
  width: 100%;
  display: flex;
  flex-direction: row;
  background-color: #ffffff;
  padding: 20rpx;
  box-sizing: border-box;
  justify-content: space-between;
  align-items: center;
}
.page .shop-list .shop-title .left {
  display: flex;
  align-items: center;
}
.page .shop-list .shop-title .left image {
  width: 26rpx;
  height: 23rpx;
  margin-right: 10rpx;
}
.page .shop-list .shop-title .left text {
  font-size: 28rpx;
  font-weight: normal;
  color: #666666;
}
.page .shop-list .shop-title .right {
  font-size: 26rpx;
  font-weight: normal;
  color: #F26500;
}
.page .shop-list .goods-list {
  width: 100%;
  display: flex;
  flex-direction: column;
}
.page .shop-list .goods-list .goods-item {
  width: 100%;
  background-color: #f8f8f8;
  display: flex;
  flex-direction: row;
  align-items: center;
  padding: 20rpx;
  box-sizing: border-box;
}
.page .shop-list .goods-list .goods-item .goods-info {
  width: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
  box-sizing: border-box;
}
.page .shop-list .goods-list .goods-item .goods-info .goods-pic {
  width: 159rpx;
  height: 159rpx;
  background: #ffffff;
  border: 1px solid #e5e5e5;
  border-radius: 7rpx;
}
.page .shop-list .goods-list .goods-item .goods-info .goods-detail {
  width: calc(100% - 162rpx);
  display: flex;
  height: 162rpx;
  flex-direction: row;
  justify-content: space-between;
  box-sizing: border-box;
  padding-left: 20rpx;
}
.page .shop-list .goods-list .goods-item .goods-info .goods-detail .d-left {
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
.page .shop-list .goods-list .goods-item .goods-info .goods-detail .d-left .line1 {
  width: 100%;
  font-size: 28rpx;
  font-weight: 400;
  color: #333333;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  text-overflow: ellipsis;
}
.page .shop-list .goods-list .goods-item .goods-info .goods-detail .d-left .line2 {
  width: 100%;
  font-size: 28rpx;
  font-weight: 400;
  color: #999999;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}
.page .shop-list .goods-list .count {
  border-bottom: 1px solid rgba(0, 0, 0, 0.1);
  width: 100%;
  background-color: #ffffff;
  padding: 20rpx;
  box-sizing: border-box;
  display: flex;
  justify-content: flex-end;
  font-size: 28rpx;
  font-weight: 400;
  color: #131313;
}
.page .shop-list .goods-list .count .color {
  color: #F26500;
  margin-right: 20rpx;
}
