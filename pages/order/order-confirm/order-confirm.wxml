<!--pages/order/order-confirm/order-confirm.wxml-->
<view class="page">
    <van-cell-group class="address">
        <van-cell class="address-title">
            <view slot="title">
                <view class="van-cell-text">
                    配送地址
                </view>
            </view>
        </van-cell>
        <van-cell is-link class="address-box">
            <view slot="title">
                <view class="van-cell-text address-detail">
                    <view class="line1">谭某某 132*******1234</view>
                    <view class="line2">河南省郑州市中原区中州大道商都路交叉口建业五栋大楼B座701室</view>
                </view>
            </view>
        </van-cell>
    </van-cell-group>

    <van-cell-group class="goods">
        <van-cell class="goods-title">
            <view slot="title">
                <view class="van-cell-text">
                    商品详情
                </view>
            </view>
        </van-cell>
        <van-cell class="goods-box">
            <view slot="title" class="goods-box2">
                <view class="goods-item">
                    <view class="goods-info">
                        <image class="goods-pic" mode="aspectFill" src="../../../static/images/avatar.gif"></image>
                        <view class="goods-detail">
                            <view class="line1">
                                <view class="goods-title">
                                    Phantom 3 Standard 2.7K航拍器无人机
                                </view>
                            </view>
                            <view class="line2">
                                <view class="line2-left">￥5990.00</view>
                                <view class="line2-right">
                                    x2
                                </view>
                            </view>
                        </view>
                    </view>


                </view>
                <view class="goods-item">
                    <view class="goods-info">
                        <image class="goods-pic" mode="aspectFill" src="../../../static/images/avatar.gif"></image>
                        <view class="goods-detail">
                            <view class="line1">
                                <view class="goods-title">
                                    Phantom 3 Standard 2.7K航拍器无人机
                                </view>
                            </view>
                            <view class="line2">
                                <view class="line2-left">￥5990.00</view>
                                <view class="line2-right">
                                    x2
                                </view>
                            </view>
                        </view>
                    </view>


                </view>
                <view class="goods-item">
                    <view class="goods-info">
                        <image class="goods-pic" mode="aspectFill" src="../../../static/images/avatar.gif"></image>
                        <view class="goods-detail">
                            <view class="line1">
                                <view class="goods-title">
                                    Phantom 3 Standard 2.7K航拍器无人机
                                </view>
                            </view>
                            <view class="line2">
                                <view class="line2-left">￥5990.00</view>
                                <view class="line2-right">
                                    x2
                                </view>
                            </view>
                        </view>
                    </view>


                </view>
            </view>
        </van-cell>
        <van-cell value="微信支付" is-link bind:tap="onPayShow">
            <view slot="title">
                <view class="van-cell-text">支付方式</view>
            </view>
        </van-cell>
        <van-cell value="" class="number-box">
            <view slot="title">
                <view class="van-cell-text">
                    <view class="line2-left">
                        购买数量
                    </view>
                    <view class="line2-right">
                        <view class="num-minus">-</view>
                        <view class="number">{{number}}</view>
                        <view class="num-add">+</view>
                    </view>
                </view>
            </view>
        </van-cell>
        <van-cell value="快递" >
            <view slot="title">
                <view class="van-cell-text">配送方式</view>
            </view>
        </van-cell>
        <van-cell-group>
            <van-field
                    value="{{ message }}"
                    label="留言"
                    type="textarea"
                    placeholder="请输入留言"
                    autosize
                    border="{{ false }}"
            />
        </van-cell-group>
    </van-cell-group>

    <view class="bottom-count">
        <view class="count">
            合计：<view class="color">￥5990.00</view>
        </view>
        <view class="count-button">结算</view>
    </view>

    <van-popup
            show="{{ showPay }}"
            position="bottom"
            bind:close="onPayClose"
            custom-class="pay-custom-class"
    >
        <view class="pay-title">支付方式</view>
        <van-radio-group value="{{ payType }}">
            <van-cell-group >
                <van-cell title="微信支付" clickable data-type="1" bind:click="onPayChange">
                    <van-radio shape="square" icon-size="25rpx" checked-color="#f26500" slot="right-icon" name="1" />
                </van-cell>
                <van-cell title="佣金支付" clickable data-type="2" bind:click="onPayChange">
                    <van-radio shape="square" icon-size="25rpx" checked-color="#f26500" slot="right-icon" name="2" />
                </van-cell>
            </van-cell-group>
        </van-radio-group>
        <view class="pay-button" catch:tap="onPayClose">关闭</view>
    </van-popup>
</view>
