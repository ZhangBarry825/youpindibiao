.page {
  width: 100%;
  height: 100%;
  position: absolute;
  background-color: #ffffff;
  padding-top: 20rpx;
  box-sizing: border-box;
}
.page .mine-back {
  width: 100%;
  height: 315rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}
.page .mine-back .left {
  margin-right: 50rpx;
  width: 185rpx;
  height: 185rpx;
  border-radius: 50%;
  overflow: hidden;
  box-shadow: 0 0 15px gainsboro;
  display: flex;
  justify-content: center;
  align-items: center;
}
.page .mine-back .left image {
  width: 165rpx;
  height: 165rpx;
  border-radius: 50%;
}
.page .mine-back .right {
  display: flex;
  flex-direction: column;
  padding-left: 30rpx;
}
.page .mine-back .right .line1 {
  font-size: 35rpx;
  font-weight: 400;
}
.page .mine-back .right .line2 {
  font-size: 35rpx;
  font-weight: 400;
  margin: 10rpx 0;
}
.page .mine-back .right .line3 {
  font-size: 23rpx;
  font-weight: 400;
}
.page .box {
  width: 100%;
  height: 618rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  margin-top: 20rpx;
  position: relative;
}
.page .box .ewm {
  width: 384rpx;
  height: 384rpx;
}
.page .box text {
  font-size: 28rpx;
  font-weight: 400;
  color: #1c1c1c;
  margin-top: 20rpx;
}
.page .box .back {
  width: 635rpx;
  height: 618rpx;
  position: absolute;
}
.page .tip-box {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.page .tip-box text {
  font-size: 28rpx;
  font-weight: 400;
  color: #999999;
  margin: 20rpx 0;
}
.page .tip-box .button {
  width: 408rpx;
  height: 94rpx;
  background: #f26500;
  border-radius: 5rpx 5rpx 5rpx 5rpx;
  font-size: 35rpx;
  font-weight: 400;
  color: #ffffff;
  display: flex;
  justify-content: center;
  align-items: center;
}
