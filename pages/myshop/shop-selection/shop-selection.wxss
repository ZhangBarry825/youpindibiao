.page {
  background-color: #f7f7f7;
}
.page .swiper-box {
  width: 100%;
  height: 340rpx;
  position: relative;
}
.page .swiper-box .slide-image {
  width: 100%;
  height: 100%;
}
.page .searchInput {
  padding: 0 20rpx;
  box-sizing: border-box;
  position: absolute;
  top: 20rpx;
  width: 100%;
}
.page .searchInput .van-search__content {
  background-color: rgba(255, 255, 255, 0.7);
}
.page .menu-box {
  margin-top: 20rpx;
  background-color: #ffffff;
  width: 100%;
  display: flex;
  flex-direction: column;
}
.page .menu-box .top {
  width: 100%;
  display: flex;
  flex-direction: row;
  border-bottom: 1px solid rgba(0, 0, 0, 0.1);
}
.page .menu-box .top .left {
  width: calc(100% - 70rpx);
}
.page .menu-box .top .left .van-ellipsis {
  color: #7F7F7F;
}
.page .menu-box .top .right {
  width: 70rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  border-left: 1px solid rgba(0, 0, 0, 0.1);
}
.page .menu-box .top .right image {
  width: 60%;
  height: 60%;
}
.page .menu-box .items {
  height: 235rpx;
  transition: 1s;
  overflow: hidden;
  width: 100%;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
}
.page .menu-box .items .item {
  color: #4C4C4C;
  font-size: 28rpx;
  width: calc(25% - 1px);
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 20rpx 0;
  border-right: 1px solid rgba(0, 0, 0, 0.1);
  border-bottom: 1px solid rgba(0, 0, 0, 0.1);
}
.page .menu-box .heightController {
  height: 0;
}
.page .header {
  width: 100%;
  margin: 10rpx 0;
}
.page .header .order-box text {
  font-size: 28rpx;
  font-weight: 400;
  color: #4d4d4d;
}
.page .g-items {
  width: 100%;
  display: flex;
  flex-direction: column;
}
.page .g-items .item {
  margin-bottom: 10rpx;
  width: 100%;
  padding: 20rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: row;
  background-color: #ffffff;
}
.page .g-items .item .left image {
  width: 246rpx;
  height: 188rpx;
}
.page .g-items .item .right {
  padding-left: 20rpx;
  box-sizing: border-box;
  width: calc(100% - 246rpx);
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
.page .g-items .item .right .line1 {
  font-size: 28rpx;
  font-weight: 400;
  color: #4d4d4d;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  overflow: hidden;
  text-overflow: ellipsis;
}
.page .g-items .item .right .line2,
.page .g-items .item .right .line3 {
  padding-right: 20rpx;
  box-sizing: border-box;
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  font-size: 21rpx;
  font-weight: 400;
  color: #808080;
}
.page .g-items .item .right .line2 .line-left,
.page .g-items .item .right .line3 .line-left,
.page .g-items .item .right .line2 .line-right,
.page .g-items .item .right .line3 .line-right {
  display: flex;
  align-items: center;
}
.page .g-items .item .right .line2 .red,
.page .g-items .item .right .line3 .red {
  color: #f26500;
}
.page .g-items .item .right .line4 .button {
  width: 129rpx;
  padding: 10rpx 0;
  background: #f26500;
  border-radius: 7rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 21rpx;
  font-weight: 400;
  color: #ffffff;
}
.page .g-items .item .right .line4 .button image {
  width: 21rpx;
  height: 21rpx;
  margin: 0 10rpx;
}
