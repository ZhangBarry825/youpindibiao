.page {
  width: 100%;
  height: 100%;
  position: absolute;
  padding-top: 20rpx;
  box-sizing: border-box;
}
.page .items {
  width: 100%;
  display: flex;
  flex-direction: column;
}
.page .items .item {
  border-bottom: 1px solid rgba(0, 0, 0, 0.05);
  width: 100%;
  padding: 20rpx;
  box-sizing: border-box;
  display: flex;
  justify-content: space-between;
}
.page .items .item .left {
  display: flex;
  flex-direction: column;
}
.page .items .item .left .line1 {
  font-size: 24rpx;
  font-weight: 400;
  color: #4d4d4d;
}
.page .items .item .left .line2 {
  margin-top: 10rpx;
  font-size: 18rpx;
  font-weight: 400;
  color: #4d4d4d;
  opacity: 0.93;
}
.page .items .item .right .line1 {
  font-size: 24rpx;
  font-weight: 400;
}
.page .items .item .right .add {
  color: #F26500;
}
.page .items .item .right .minus {
  color: #3170EE;
}
.page .items .item .right .line2 {
  margin-top: 10rpx;
  font-size: 20rpx;
  font-weight: 400;
  color: #999999;
}
