.page {
  width: 100%;
  position: relative;
}
.page .tab-active-class {
  color: #f26500;
}
.page .timing {
  padding: 30rpx 0;
  display: flex;
  justify-content: center;
  width: 100%;
  text-align: center;
  font-size: 25rpx;
  font-weight: 400;
  color: #4c4c4c;
  line-height: 35rpx;
}
.page .timing .red {
  color: #F16500;
}
.page .scroll-box {
  width: 100%;
  box-sizing: border-box;
}
.page .scroll-box .goods {
  width: 100%;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
}
.page .scroll-box .goods .good {
  width: 100%;
  padding-bottom: 20rpx;
  display: flex;
  flex-direction: row;
}
.page .scroll-box .goods .good .left {
  width: 246rpx;
  height: 187rpx;
}
.page .scroll-box .goods .good .left image {
  width: 100%;
  height: 100%;
}
.page .scroll-box .goods .good .right {
  width: calc(100% - 246rpx);
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
.page .scroll-box .goods .good .right .title {
  padding: 10rpx 20rpx;
  font-size: 28rpx;
  color: #4C4C4C;
  box-sizing: border-box;
  line-height: 1.3;
  max-height: 2.7rem;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  text-overflow: ellipsis;
}
.page .scroll-box .goods .good .right .detail {
  padding: 10rpx 20rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: flex-end;
}
.page .scroll-box .goods .good .right .detail .price {
  color: #4C4C4C;
  font-size: 22rpx;
}
.page .scroll-box .goods .good .right .detail .price .line1 {
  display: flex;
  align-items: flex-end;
}
.page .scroll-box .goods .good .right .detail .price .line1 .color {
  color: #F16500;
  font-size: 30rpx;
}
.page .scroll-box .goods .good .right .detail .price .line2 {
  display: flex;
}
.page .scroll-box .goods .good .right .detail .price .line2 .color {
  text-decoration: line-through;
}
.page .scroll-box .goods .good .right .detail .button {
  width: 128rpx;
  height: 46rpx;
  background: #f16500;
  border-radius: 7rpx;
  font-size: 21rpx;
  font-weight: 400;
  color: #ffffff;
  line-height: 35rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.page .scroll-box .goods .good .right .detail .button2 {
  background-color: gainsboro;
  width: 128rpx;
  height: 46rpx;
  border-radius: 7rpx;
  font-size: 21rpx;
  font-weight: 400;
  color: #ffffff;
  line-height: 35rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
