.page {
  width: 100%;
  height: 100%;
  position: absolute;
  background-color: #f2f2f2;
}
.page .comment-box {
  width: 100%;
  display: flex;
  flex-direction: column;
}
.page .comment-box .item {
  background-color: #ffffff;
  width: 100%;
  display: flex;
  flex-direction: column;
  padding: 20rpx;
  box-sizing: border-box;
  align-items: center;
  border-bottom: 1px solid rgba(0, 0, 0, 0.1);
}
.page .comment-box .item .line1 {
  width: 100%;
  display: flex;
  align-items: center;
  padding: 20rpx 0;
}
.page .comment-box .item .line1 .name {
  font-size: 30rpx;
  font-weight: 400;
  color: #333333;
}
.page .comment-box .item .line1 .stars {
  margin-top: 3rpx;
  margin-left: 10rpx;
  display: flex;
}
.page .comment-box .item .line2 {
  padding: 10rpx 0;
  width: 100%;
  font-size: 30rpx;
  font-weight: 400;
  color: #666666;
  line-height: 1.5;
}
.page .comment-box .item .line3 {
  width: 100%;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
}
.page .comment-box .item .line3 .image-class {
  margin: 5px 10rpx;
}
.page .comment-box .item .line4 {
  align-self: flex-start;
  padding: 10rpx 0;
  box-sizing: border-box;
  font-size: 28rpx;
  font-weight: 400;
  color: #9b9b9b;
}
