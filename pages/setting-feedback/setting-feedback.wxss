.page {
  width: 100%;
  height: 100%;
  position: absolute;
  background-color: #f5f5f5;
}
.page .input-class {
  height: 200rpx;
}
.page .tips {
  width: 100%;
  font-size: 28rpx;
  font-weight: 400;
  color: #c1c1c1;
  line-height: 1.5;
  padding: 20rpx;
  box-sizing: border-box;
}
.page .submit-button {
  margin-top: 40rpx;
  width: 100%;
  padding: 20rpx 0;
  background: #f26500;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 35rpx;
  font-weight: 400;
  color: #ffffff;
}
