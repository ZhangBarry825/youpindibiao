<!--pages/address-detail/address-detail.wxml-->
<view class="page">

    <van-cell-group>

        <van-cell value-class="value-class" label-class="label-class" custom-class="custom-class"
                  title-class="title-class" is-link>
            <view slot="title">
                <van-field
                        disabled
                        title-width="150rpx"
                        label="所在地区"
                        value="{{ value }}"
                        placeholder="请选择所在地区"
                        border="{{ false }}"
                        bind:change="onChange"
                />
            </view>
        </van-cell>
        <van-cell value-class="value-class" label-class="label-class" custom-class="custom-class"
                  title-class="title-class" is-link>
            <view slot="title">
                <van-field
                        disabled
                        title-width="150rpx"
                        label="街道"
                        value="{{ value }}"
                        placeholder="请选择所在街道"
                        border="{{ false }}"
                        bind:change="onChange"
                />
            </view>
        </van-cell>
        <van-cell value-class="value-class" label-class="label-class" custom-class="custom-class"
                  title-class="title-class" is-link>
            <view slot="title">
                <van-field
                        title-width="150rpx"
                        label="详细地址"
                        value="{{ value }}"
                        placeholder="请输入详细地址"
                        border="{{ false }}"
                        bind:change="onChange"
                />
            </view>
        </van-cell>
        <van-cell value-class="value-class" label-class="label-class" custom-class="custom-class"
                  title-class="title-class" is-link>
            <view slot="title">
                <van-field
                        title-width="150rpx"
                        label="收货人姓名"
                        value="{{ value }}"
                        placeholder="请输入收货人姓名"
                        border="{{ false }}"
                        bind:change="onChange"
                />
            </view>
        </van-cell>
        <van-cell value-class="value-class" label-class="label-class" custom-class="custom-class"
                  title-class="title-class" is-link>
            <view slot="title">
                <van-field
                        title-width="150rpx"
                        label="手机号码"
                        value="{{ value }}"
                        placeholder="请输入手机号码"
                        border="{{ false }}"
                        bind:change="onChange"
                />
            </view>
        </van-cell>
        <van-cell value-class="value-class" label-class="label-class" custom-class="custom-class"
                  title-class="title-class" is-link>
            <view slot="title">
                <van-field
                        title-width="150rpx"
                        label="邮编"
                        value="{{ value }}"
                        placeholder="请输入邮编"
                        border="{{ false }}"
                        bind:change="onChange"
                />
            </view>
        </van-cell>
    </van-cell-group>

    <view class="default">
        <text>设为默认地址</text>
        <van-switch
                bind:change="onDefaultCheckedChange"
                checked="{{ defaultChecked }}"
                active-color="#f26500"
                inactive-color="#f4f4f4"
                size="40rpx"
        />
    </view>

    <view class="submit-button">保存</view>
</view>
