.page {
  width: 100%;
  height: 100%;
  background-color: #f2f2f2;
}
.page .menus {
  width: 100%;
  height: 40px;
  display: flex;
  justify-content: space-around;
  flex-direction: row;
  align-items: center;
  box-sizing: border-box;
  border-top: 1px solid rgba(0, 0, 0, 0.1);
  border-bottom: 1px solid rgba(0, 0, 0, 0.1);
}
.page .menus .menu {
  width: 33.33%;
  background-color: #ffffff;
  border-left: 1px solid rgba(0, 0, 0, 0.1);
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  height: 100%;
  font-size: 26rpx;
  font-weight: 400;
}
.page .menus .menu image {
  width: 13rpx;
  height: 19rpx;
  margin: 0 10rpx;
}
.page .scroll-box {
  width: 100%;
  box-sizing: border-box;
}
.page .scroll-box .good-items {
  width: 100%;
  padding: 20rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: space-between;
}
.page .scroll-box .good-items .good-item {
  margin-bottom: 20rpx;
  background-color: #fff;
  display: flex;
  flex-direction: column;
  width: 345rpx;
}
.page .scroll-box .good-items .good-item .good-pic {
  width: 345rpx;
  height: 330rpx;
}
.page .scroll-box .good-items .good-item .good-pic image {
  width: 100%;
  height: 100%;
}
.page .scroll-box .good-items .good-item .title {
  margin: 20rpx 0;
  width: 100%;
  padding: 0 10rpx;
  font-size: 28rpx;
  font-weight: normal;
  color: #464646;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  overflow: hidden;
  text-overflow: ellipsis;
}
.page .scroll-box .good-items .good-item .detail {
  padding: 10rpx;
  box-sizing: border-box;
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}
.page .scroll-box .good-items .good-item .detail .price {
  display: flex;
  align-items: center;
}
.page .scroll-box .good-items .good-item .detail .price .text1 {
  font-size: 27rpx;
  color: #F16500;
}
.page .scroll-box .good-items .good-item .detail .price .text2 {
  color: #7F7F7F;
  font-size: 22rpx;
  text-decoration: line-through;
  margin-left: 20rpx;
}
.page .scroll-box .good-items .good-item .detail .trolley {
  width: 50rpx;
  height: 50rpx;
}
.page .scroll-box .good-items .good-item .detail .trolley image {
  width: 100%;
  height: 100%;
}
.page .scroll-box .shop-none {
  width: 100%;
  margin-top: 100rpx;
  height: 60%;
  background-color: #f4f4f4;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.page .scroll-box .shop-none image {
  width: 255rpx;
  height: 207rpx;
}
.page .scroll-box .shop-none .text {
  font-size: 30rpx;
  font-weight: 400;
  color: #030000;
  margin: 50rpx 0;
}
.page .scroll-box .shop-none .none-button {
  width: 212rpx;
  padding: 15rpx 0;
  border: 1px solid #f26500;
  border-radius: 12rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 30rpx;
  font-weight: 400;
  color: #f26500;
}
